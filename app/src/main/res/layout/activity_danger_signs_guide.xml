<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangerSignsGuide">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/question_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/question_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/question_txt"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/question_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Question"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/question_title_txt"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
            android:id="@+id/yes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:background="#3A8FFF"
            app:layout_constraintTop_toBottomOf="@id/question_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/no_btn" />
        <Button
            android:id="@+id/no_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:background="#3A8FFF"
            app:layout_constraintTop_toBottomOf="@id/question_txt"
            app:layout_constraintLeft_toRightOf="@id/no_btn"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/answer_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/yes_btn"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/answer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Answer"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/answer_title_txt"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:background="#20DE1D"
            app:layout_constraintTop_toBottomOf="@+id/answer_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>